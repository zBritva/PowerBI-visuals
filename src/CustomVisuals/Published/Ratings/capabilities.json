                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "strokeWidth": {
                    "displayName": "Border width",
                    "description": "Specify width of the border between 1 to 4",
                    "type": {
                        "numeric": true
                    }
                }
            }
        },
        "starAnimation": {
            "displayName": "Animation",
            "description": "Toggle to enable or disable animation",
